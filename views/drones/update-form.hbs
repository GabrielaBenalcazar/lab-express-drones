<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Edit {{name}}</h1>

            <hr />

            <form action="/drones/{{id}}/edit" method="POST">

                <div class="mb-3">
                    <label for="title" class="form-label">name</label>
                    <input
                        type="text"
                        class="form-control"
                        id="name"
                        name="name"
                        value="{{name}}"
                    />
                </div>
                <div class="mb-3">
                    <label
                        for="propellers"
                        class="form-label"
                    >propellers</label>
                    <input
                        type="number"
                        class="form-control"
                        id="propellers"
                        name="propellers"
                        value="{{propellers}}"
                    />
                </div>
                <div class="mb-3">
                    <label for="maxSpeed" class="form-label">Max Speed</label>
                    <input
                        type="number"
                        class="form-control"
                        id="maxSpeed"
                        name="maxSpeed"
                        value="{{maxSpeed}}"
                    />
                </div>

                <button type="submit" class="btn btn-dark">New Dron</button>

            </form>

            <hr />

        </div>
    </div>

</div>